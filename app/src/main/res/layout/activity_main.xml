<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainActivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mainActivityTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Rechercher une ville..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="5px"
        android:paddingStart="5px"
        android:paddingLeft="5dp"
        android:paddingTop="5px"
        android:paddingEnd="5px"
        android:paddingRight="5px"
        android:paddingBottom="5px"
        android:textColor="#FFFFFF"
        android:textColorHint="#A6A6A6"
        app:layout_constraintEnd_toStartOf="@+id/mainActivitySearchButton"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityTextView" />

    <Button
        android:id="@+id/mainActivitySearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:onClick="navigateToSearchButtonWeather"
        android:text="Rechercher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityTextView" />

    <Button
        android:id="@+id/mainActivityDouaiButton"
        android:layout_width="175dp"
        android:layout_height="197dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#3CF1EBF1"
        android:onClick="navigateToDouaiButtonWeather"
        android:text="Douai"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityArrasButton" />

    <Button
        android:id="@+id/mainActivityCambraiButton"
        android:layout_width="175dp"
        android:layout_height="197dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#3CF1EBF1"
        android:onClick="navigateToCambraiButtonWeather"
        android:text="Cambrai"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityLilleButton" />

    <Button
        android:id="@+id/mainActivityArrasButton"
        android:layout_width="175dp"
        android:layout_height="197dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#3CF1EBF1"
        android:onClick="navigateToArrasButtonWeather"
        android:text="Arras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityTextInput" />

    <Button
        android:id="@+id/mainActivityLilleButton"
        android:layout_width="175dp"
        android:layout_height="197dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#3CF1EBF1"
        android:onClick="navigateToLilleButtonWeather"
        android:text="Lille"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityTextInput" />

</androidx.constraintlayout.widget.ConstraintLayout>